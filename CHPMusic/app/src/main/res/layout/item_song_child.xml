<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_song_child_height"
    android:background="@drawable/ripple_effect"
    tools:background="@color/library_back_color">
    <View
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/FlatOrange"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/number"
        android:layout_width="45dp"
        android:layout_height="45dp"
        tools:text="1"
        android:textColor="#AAEEEEEE"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image"
            app:layout_constraintStart_toEndOf="@id/number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerInside"
            android:padding="6dp"
            app:riv_corner_radius="2dp"
            tools:src="@drawable/music_style"
            tools:riv_border_width="1dp"
            app:riv_border_color="#88000000"/>
        <ImageView
            android:id="@+id/quick_play_pause"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="11dp"
            app:layout_constraintStart_toStartOf="@id/image"
            app:layout_constraintTop_toTopOf="@id/image"
            app:layout_constraintBottom_toBottomOf="@id/image"
            app:layout_constraintEnd_toEndOf="@id/image"
            tools:src="@drawable/ic_volume_up_black_24dp"
            android:tint="@color/FlatWhite"
            tools:visibility="gone"
            />
        <TextView
            android:id="@id/title"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/FlatWhite"
            android:textStyle="bold"
            android:textSize="15sp"
            tools:text="Galaxy Supernova"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image"
            app:layout_constraintEnd_toStartOf="@id/present"
            app:layout_constraintBottom_toTopOf="@id/artist"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp" />
        <TextView
            android:id="@id/artist"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_height="wrap_content"
            tools:text="Girls 'Generation"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#AAF5F5F5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="@id/title"
            app:layout_constraintEnd_toEndOf="@id/title"/>
    <com.nxchien.chpmusic.ui.widget.CircularPlayPauseProgressBar
        android:id="@+id/present"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/more"
        android:padding="8dp"
        app:iconTint="@color/FlatWhite"
        android:background="@drawable/ripple_oval"
        android:alpha="0.9"/>

        <ImageView
            android:id="@+id/more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="45dp"
            android:layout_marginEnd="6dp"
            android:layout_height="45dp"
            android:src="@drawable/ic_more_horiz_black_24dp"
            android:tint="#DDF5F5F5"
            android:scaleType="centerInside"
            android:background="@drawable/ripple_oval"
            android:layout_marginRight="6dp" />
</android.support.constraint.ConstraintLayout>