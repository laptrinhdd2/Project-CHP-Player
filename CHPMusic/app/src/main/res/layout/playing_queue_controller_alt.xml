<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.motion.MotionLayout
    android:id="@+id/constraint_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/background_panel_color">
    <View
        android:id="@+id/minimize_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/shuffle_button"
        />


    <ImageView
        android:id="@+id/down"
        android:layout_width="35dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
        android:tint="@color/FlatBlue"
        android:layout_marginTop="2dp"
        android:alpha="0.6"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/minimize_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_playing_queue"
        tools:layoutManager="LinearLayoutManager"
        android:overScrollMode="never"
        android:layout_marginTop="12dp"
        />
    <TextView
        android:id="@+id/song_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:background="@drawable/ripple_effect_15dp_radius"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        app:layout_constraintTop_toBottomOf="@id/down"
        app:layout_constraintStart_toStartOf="@id/playlist_title"
        android:text="36 Songs"
        android:textSize="11sp"
        android:textStyle="bold"
        android:maxWidth="250dp"
        android:textColor="@color/FlatWhite"/>

    <TextView
        android:id="@+id/artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/playlist_title"
        app:layout_constraintTop_toBottomOf="@id/playlist_title"
        android:text="Katy Perry, Justin Biebers ..."
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textColor="@color/FlatTealBlue"
        android:textStyle="bold"
        android:layout_marginEnd="2dp"
        android:textSize="13sp"/>
    <TextView
        android:id="@+id/playlist_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/song_number"
        app:layout_constraintStart_toStartOf="@id/play_pause_button"
        android:textColor="@color/FlatBlue"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="All Songs"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit ="marquee_forever"
        android:gravity="center_vertical"
        android:scaleX="2"
        android:scaleY="2"
        android:translationX="32dp"
        />
    <View
        android:id="@+id/shuffle_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/shuffle_button"
        app:layout_constraintStart_toStartOf="@id/shuffle_button"
        app:layout_constraintEnd_toEndOf="@id/text_shuffle"
        app:layout_constraintBottom_toBottomOf="@id/shuffle_button"
        android:background="@drawable/ripple_16dp_border"/>
    <View
        android:id="@+id/repeat_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/repeat_button"
        app:layout_constraintBottom_toBottomOf="@id/repeat_button"
        app:layout_constraintStart_toStartOf="@id/repeat_button"
        app:layout_constraintEnd_toEndOf="@id/text_repeat"
        android:background="@drawable/ripple_16dp_border"/>
    <ImageView
        android:id="@+id/shuffle_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/artist"
        app:layout_constraintStart_toEndOf="@id/play_pause_button"
        android:src="@drawable/shufflel"
        android:tint="@color/FlatWhite"
        android:background="@drawable/ripple_oval"
        android:layout_marginTop="15dp"
        android:layout_marginStart="6dp"
        android:padding="11dp"/>
    <ImageView
        android:id="@+id/repeat_button"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/shuffle_button"
        app:layout_constraintStart_toEndOf="@id/text_shuffle"
        android:src="@drawable/repeat"
        android:tint="@color/FlatWhite"
        android:background="@drawable/ripple_oval"
        android:padding="11dp"
        android:layout_marginStart="11dp"/>
    <TextView
        android:id="@+id/text_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/shuffle_button"
        app:layout_constraintTop_toTopOf="@id/shuffle_button"
        app:layout_constraintBottom_toBottomOf="@id/shuffle_button"
        android:text="Shuffle"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingEnd="16dp"
        android:textSize="15sp"
        android:alpha="1"
        android:maxLines="1"/>
    <TextView
        android:id="@+id/text_repeat"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/repeat_button"
        app:layout_constraintTop_toTopOf="@id/shuffle_button"
        app:layout_constraintBottom_toBottomOf="@id/shuffle_button"
        android:text="Repeat"
        android:gravity="center"
        android:textStyle="bold"
        android:paddingEnd="16dp"
        android:textSize="15sp"
        android:maxLines="1"
        android:alpha="1"/>
    <ImageView
        android:id="@+id/play_pause_button"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="@id/shuffle_button"
        app:layout_constraintBottom_toBottomOf="@id/shuffle_button"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_pause_black_24dp"
        android:tint="@color/FlatWhite"
        android:layout_marginStart="10dp"
        android:padding="12dp"
        android:background="@drawable/ripple_oval"
     />
    <TextView
        android:id="@+id/lyric"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/shuffle_button"
        app:layout_constraintBottom_toBottomOf="@id/shuffle_button"
        android:gravity="center"
        android:textSize="14sp"
        android:text="Lyric"
        app:layout_constraintStart_toEndOf="parent"
        android:alpha="0"
        android:background="@drawable/ripple_16dp_border"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />
</android.support.constraint.motion.MotionLayout>