<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <View

        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:id="@+id/header_panel"/>
    <TextView
        android:tag="sticky|-hastransparancy"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/header_panel"
        app:layout_constraintStart_toStartOf="@id/header_panel"
        app:layout_constraintBottom_toBottomOf="@id/header_panel"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:id="@+id/title"
        android:textSize="@dimen/header1_text_size"

        android:textStyle="bold"
        android:text="@string/playlists"
        android:textColor="@color/FlatWhite"/>
        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:minWidth="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toTopOf="@id/header_panel"
            app:layout_constraintBottom_toBottomOf="@id/header_panel"
            app:layout_constraintStart_toEndOf="@id/title"
            android:text="0"
            android:singleLine="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:textColor="@color/FlatYellow"
            android:background="@drawable/count_round_drawable"/>
        <TextView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:layout_height="match_parent"
            android:text="@string/more"
            android:textColor="#EEE"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="@id/header_panel"
            app:layout_constraintBottom_toBottomOf="@id/header_panel"
            app:layout_constraintEnd_toEndOf="parent"
            />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_panel"
        tools:listitem="@layout/item_feature_playlist"
        tools:orientation="horizontal"
        tools:layoutManager="LinearLayoutManager"
        android:paddingStart="8dp"
        android:paddingLeft="8dp" />
</android.support.constraint.ConstraintLayout>